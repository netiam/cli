# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2
quote_type = single

[*.json]
indent_style = space
indent_size = 2
quote_type = single

[package.json]
indent_style = space
indent_size = 2
